
.row
  = render "side"
  - render partial: "wizard_nav"
  .col-md-9
    .card
      .card-header
        %h3.card-title
          = params[:id]
      .card-body

        = simple_form_for @campaign, url: wizard_path do |f|

          = f.input :name

          = f.input :list_id, as: :select, collection: Chaskiq::List.all

          = f.submit :class => "btn btn-primary", disable_with: "loading"